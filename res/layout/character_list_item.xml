<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/character_list_entry_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >

    <ImageView
        android:id="@+id/character_list_item_char_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/character_list_char_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/character_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >
        </TextView>

        <TextView
            android:id="@+id/character_list_item_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >
        </TextView>

        <TextView
            android:id="@+id/character_list_item_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >
        </TextView>
    </LinearLayout>

</LinearLayout>